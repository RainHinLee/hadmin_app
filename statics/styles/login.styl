@import 'nib';

html
body
.bg
.body
	position relative
	width 100%
	height 100%
	overflow hidden
.bg
	.imgs
		position absolute
		z-index 2
		width 100%
		height 100%
		left 0px
		top 0px
		background transparent
		img
			position absolute
			left 0px
			top 0px
			width 100%
			height 100%
			opacity 0.5
	div
		width 100%
		height 100%
		background #444
.body
	position absolute
	left 0px
	top 0px
	z-index 2
	font-family  "微软雅黑"
	color #fff
	#login
		margin-top 30px
		height 460px
		background rgba(13,13,13,0.5)
		border-radius  7px
		position relative
		h1
			letter-spacing  5px
			font-size 20px
			font-weight normal
		form
			div
				position relative
			label
				font-size 14px
				font-weight normal
			input
				background rgba(83, 78, 78, 0.35)
				color #fff
				border 1px #aaa solid
				font-style italic
				padding 5px 30px
				letter-spacing 2px

			.icons
				position absolute
				left 10px
				top 60%
				color #B5E61D
			.btn
				outline none !important

	#mp3
		position absolute
		right 20px
		top 20px
		width 35px
		height 35px
		line-height 35px
		text-align center
		background #22B14C
		border-radius 50%
		cursor pointer
		&.active
			animation move 2000ms linear infinite
			img:nth-of-type(1)
				display inline-block
			img:nth-of-type(2)
				display none
		img
			width 24px
			height 24px
			&:nth-of-type(1)
				display none
			&:nth-of-type(2)
				display inline-block
					
@keyframes move {
	from {
		transform rotate(0deg)
	}
	to {
		transform rotate(360deg)	
	}
}
	
		

