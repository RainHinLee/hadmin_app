@import 'nib'

#aside 
	padding 0px
	height 100%
	position fixed
	left 0px
	top 0px
	width 200px
	z-index 10
	background #f3efe0
	h1 
		margin 0px
		padding 0px
		height 60px
		line-height 60px
		text-align center
		font-size 20px
		color #fff
		background-color #388A5A

	li 
		color #61767F
		height 50px
		line-height 50px
		font-size 16px
		background-color #F3EFE0
		overflow auto
		cursor pointer
		text-indent 15px
		a
			color #61767F
			margin-left 5px
			text-decoration none
		&:hover
		&.active
			background-color #FA787D
			color #fff
			a
				color #fff


