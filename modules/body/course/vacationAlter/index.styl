#course_alter
	width 760px
	max-width 760px
	.md-content
		border-radius 0px
		h3
			position relative
			padding 8px
			font-size 18px
			color #fff
			background #fa787d
			span
				position absolute
				font-size 14px
				top 3px
				right 3px
				width 20px
				height 20px
				color #fff
				cursor pointer
				&:hover
					color #22B14C
		.md-body
			color #444
			font-size 14px
			padding 0px
			border-bottom 1px solid #ccc
			.show
			.form
				height 310px
				margin-bottom 0px
				border none
			.show
				border-right 1px solid #ccc
				padding 5px 15px
				overflow-y auto
				h4
					font-size 14px
					font-weight normal
					color #777
				td
				th
					text-align center
					font-size 13px
					color #999
					font-weight normal
					span
						color #fa787d
						cursor pointer
						&:hover
							text-decoration underline
				tr.empty
					td
						height 180px
						line-height 180px
			.form
				padding 5px 20px
				h5
					font-size 14px
					font-weight normal
					color #777
				>div
					margin-bottom 20px
					input
						width 200px
						border 1px solid #ccc
						font-size 13px
						color #aaa
						padding 3px 5px
					p
						margin-bottom 3px
						font-size 14px
						padding 0px
						color #777
					.btn
						display inline-block
						padding 5px 50px
						font-size 13px
						background #fa787d
						color #fff
						border none