#course_alter
	width 760px
	max-width 760px
	.md-content
		border-radius 0px
		h3
			position relative
			padding 8px
			font-size 18px
			color #fff
			background #fa787d
			span
				position absolute
				font-size 14px
				top 3px
				right 3px
				width 20px
				height 20px
				color #fff
				cursor pointer
				&:hover
					color #22B14C
		.md-body
			color #444
			font-size 14px
			padding 15px
			h5
				font-size 16px
			td
				&.key
					color #000
					width 30%
				&.value
					width 70%
				input
				select
				button
					height 25px
					padding 2px 5px
					font-size 13px
					color #444
					border 1px solid #ddd
					outline none !important
				input[type=text]
					width 30%
				input[type=date]
					width 70%
				select
					width 35%
				button
					display inline-block
					color #fff
					background #fa787d
					border none
				&.rules
					input 
						width 50%
						margin-bottom 3px
					select
						width 50%
						
			.intro
				padding-top 20px
				color #333
				p
					margin-bottom 5px
					padding 0px
					span:nth-of-type(2)
						color #E6494F
						cursor pointer
						&:hover
							text-decoration underline
						
					