.classroom
	.empty
		color #ED1C24
		height 300px
		line-height 300px
		text-align center
		background #f5f5f5
	li
		margin-bottom 30px
		.course_box
			border 1px solid #ccc
			height 365px
			border-radius 3px
			padding 10px 
			background-image url('_domain/images/classroom_bg.jpg')
			background-size 100% 100%
			position relative
			>div
				margin-bottom 15px
				p
					margin-bottom 2px
					color #333
					&.note
						margin-bottom 10px
						color #666
						padding-right 10px
				h4
					margin 5px 0px
					font-size 16px
					font-weight normal
					color #000
					small
						font-size 14px
				&.course_action
					position absolute
					bottom 100px
					left 15px
					height 40px
					margin-bottom 5px
					.selectBox
						font-size 14px
						color #666
						padding 0px
						margin-bottom 5px
						select
							font-size 12px
							color #666
							border 1px solid #ccc
							padding 3px 5px
							outline none !important
					.btn
						padding 4px 10px
						font-size 12px
					
	.classroom_infos
		height 60px
		padding 10px
		border-top 1px solid #ccc
		color #222
		font-size 14px
		.value
			color #444
				
			
		
	