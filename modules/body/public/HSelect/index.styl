._hselect
	display inline-block
	position relative
	input
		margin 0px
		border-radius 0px
		border 1px solid #ddd
		outline none
		padding-left 5px
	>ul
		margin 0px
		padding 0px 
		background #fff
		border 1px solid #ccc
		max-height 200px
		position absolute
		left 0px 
		top 100%
		overflow auto
		min-width 100%
		display none
		li
			padding 3px 10px
			cursor default
			font-size 13px
			&:hover
			&.active
				background #ccc
		&.show
			display block
		&.hide
			display none
				
			
	
	