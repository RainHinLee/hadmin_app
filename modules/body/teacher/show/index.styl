.teacher_show
	margin-top 30px
	.panel-heading
		margin 0px
		padding 0px 15px
		p
			height 50px
			line-height 50px
			margin-bottom 0px
		button
			padding 3px 10px
			font-size 14px
		
	.panel-body
		min-height 300px
	table
		th
			text-align center
			font-weight normal
			font-size 14px
		td
			text-align center
			font-size 14px
			color #555
			width 16.66%
			span
				font-size 13px
				padding 2px 10px
				text-decoration underline
				color #ED1C24
				cursor pointer
				
		.empty
		.loading
			td
				height 300px
				line-height 200px
				font-size 14px
				
			