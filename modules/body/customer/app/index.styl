

.customer
	margin-bottom 40px
	
	.pos
		height 10px
		margin-bottom 0px
	table
		background #fff
		tr
			h3
				font-size 16px
				font-weight normal
				color #222
				margin-bottom 0px
				margin-top 0px
				span
					margin-right 20px
					cursor pointer	
			&.payment
				h3>span:nth-of-type(1)
					color #22B14C
					text-decoration underline 					
			&.present
				h3>span:nth-of-type(2)
					color #22B14C
					text-decoration underline 
			&.promotion
				h3>span:nth-of-type(3)
					color #22B14C
					text-decoration underline	
			td
				font-size 14px
				color #444
				width 25%
				transition 300ms
				&:nth-of-type(odd)
					width 20%
					color #111
				&:nth-of-type(even)
					width 30%
				input
				select
					width 70%
					border 1px solid #ccc
					padding 2px 5px
					color #444
					margin-bottom 5px
					font-size 13px
					&.md
						width 35%
					&.xs
						width 25%
				.btn
					padding 2px 10px
					margin-left 15px
					
							
		&.level
			tr:nth-of-type(n+2)
				td:nth-of-type(even)
					opacity 0
					padding-left 30px
		&.come
			tr:nth-of-type(n+2)
				td:nth-of-type(even)
					padding-left 8px
					opacity 1