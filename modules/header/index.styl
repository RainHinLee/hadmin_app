#header
	padding-right 20px
	height 60px
	border-bottom 1px solid #DBE0E9
	background #F1F3F6
	position fixed
	z-index 9
	padding-left 200px
	left 0px
	top 0px
	width 100%
	
	ul
		position relative
		top 20px
		left 20px
		li
			height 40px
			line-height 40px
			a
				font-size 14px
				color #61767f
				line-height 1.3
			&.active
			&:hover
			&.v-link-active
				a
					color #fff
					background #fa787d
			
			
	.userBox
		a
			color #333
			font-size 16px
			margin-left 20px
			height 60px
			line-height 60px
			text-decoration none
			vertical-align middle
			&:first-child
				span
					color #fa787d
				i
					margin-left 5px
			&.logout
				font-size 20px
				cursor pointer
				&:hover
					color #FA787D